# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize for your environment
# DO NOT commit terraform.tfvars to version control (it's in .gitignore)

# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "url-shortener"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# Jenkins Configuration
jenkins_allowed_ip = "YOUR_IP_ADDRESS/32"  # Replace with your actual IP
jenkins_instance_type = "t2.medium"

# EKS Configuration
eks_node_instance_type = "t3.medium"
eks_desired_nodes = 2
eks_min_nodes = 1
eks_max_nodes = 4

# DocumentDB Configuration
docdb_instance_class = "db.t3.medium"
docdb_master_username = "dbadmin"

# Cost Optimization
enable_nat_gateway = true
single_nat_gateway = true  # Set to false for high availability (2x NAT Gateway cost)
